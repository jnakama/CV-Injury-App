<h1>Edit Injury</h1>
<%= form_for :injury, url: injury_path(@injury), method: :patch do |f| %>
    <% if @injury.errors.any? %>
        <% @injury.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end%>
    <% end %>
    <h3>Injury Report</h3>
    <p>
        <%= f.label :sport %><br>
        <%= f.text_field(:sport, {:class => 'form_control'})%>
    </p>
    
    <p>
        <%= f.label :name %><br>
        <%= f.text_field(:name, {:class => 'form_control'}) %>
    </p>
    
    <p>
        <%= f.label :exposure %><br>
        <%= f.text_field(:exposure, {:class => 'form_control'}) %>
    </p>
    
    
    <p>
        <%= f.label :date %><br>
        <div class ="dropdown-edit">
        <%= f.date_select(:date, {:class => 'form_control'}) %>
        </div>
    </p>
    
    <p>
        <%= f.label :reportnotes, "Report Notes" %><br>
        <div class = "black">
        <%= f.text_area(:reportnotes, {:class => 'form_control'}) %>
        </div>
    </p><br>
    <h3>Injury Details</h3>
    <br>
    <p>
        <%= f.label :side %><br>
       
        <%= f.radio_button(:side, "left")%> <%= f.label :side, "Left"%><br>
        
        <%= f.radio_button(:side, "right")%> <%= f.label :side, "Right"%><br>
        
        <%= f.radio_button(:side, "both")%> <%= f.label :side, "Both"%><br> 
        
        <%= f.radio_button(:side, "not applicable")%> <%= f.label :side, "Not Applicable"%><br>
    </p>
    
    <p>
        <%= f.label :part %><br>
        <%= f.text_field(:part, {:class => 'form_control'}) %>
    </p>
    
    <p>
        <%= f.label :injurytype, "Injury Type" %><br>
        <%= f.text_field(:injurytype, {:class => 'form_control'}) %>
    </p>
    
    <p>
        <%= f.label :symptoms %><br>
        <div class = "black">
        <%= f.text_area(:symptoms, {:class => 'form_control'}) %>
        </div>
    </p>
    
    <p>
        <%= f.label :injurynotes, "Injury notes" %><br>
        <div class = "black">
        <%= f.text_area(:injurynotes, {:class => 'form_control'}) %>
        </div>
    </p><br>
    <h3>Treatment Details</h3>
    <br>
    <p>
        <%= f.label :immediatetreatment, "Immediate treatment" %><br>
        <%= f.text_field(:immediatetreatment, {:class => 'form_control'}) %>
    </p>
    
  
        <p>
        <%= f.label :returndate, "Return date" %><br>
        <div class ="dropdown-edit">
        <%= f.date_select(:returndate, {:class => 'form_control'}) %>
        </div>
        </p>
    
    
    <p>
        <%= f.label :returned, "Has returned?"%><br>
       
        
        <%= f.radio_button(:returned, "true")%>
        <%= f.label :returned, "Yes"%><br> 
        
        <%= f.radio_button(:returned, "false")%>
        <%= f.label :returned, "No"%>
    </p>
    
    <p>
        <%= f.label :treatmentnotes, "Treatment Notes" %><br>
        <div class = "black">
        <%= f.text_area(:treatmentnotes, {:class => 'form_control'}) %>
        </div>
    </p>
    
    <p>
        
          
        <%= f.label :attachment %>
        <% if @injury.attachment.attached? %>
        <br>
        Currently attached: <%= @injury.attachment.filename %>
        <br><br>
        <%end%>
      <div class ="file_input">
        <%= f.file_field :attachment %> 
        </div>
    </p><br>
    
     <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>